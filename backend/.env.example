# AI Smart Shield Trust Route - Environment Variables Template
# Copy this file to .env and fill in the values

# Project Info
PROJECT_NAME="AI Smart Shield Trust Route"
VERSION="1.0.0"
API_V1_PREFIX="/api/v1"

# Database
DATABASE_URL="sqlite:///./smartshield.db"

# API Keys (Replace with actual keys)
GOOGLE_MAPS_API_KEY=""
MAPBOX_TOKEN=""
SAFEGRAPH_API_KEY=""

# Security
SECRET_KEY="change-me-in-production"
JWT_SECRET_KEY="jwt-secret-key-change-me"
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Server
BACKEND_HOST="0.0.0.0"
BACKEND_PORT=8000
ENVIRONMENT="development"
DEBUG="True"

# Optimization
OPTIMIZATION_ALGORITHM="nearest_neighbor"

# Email Configuration (for SOS alerts)
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME=""
SMTP_PASSWORD=""
SMTP_USE_TLS="True"
FROM_EMAIL="noreply@smartshield.com"
EMERGENCY_EMAIL="dharunikaktm@gmail.com"
