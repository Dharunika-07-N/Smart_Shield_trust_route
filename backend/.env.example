# Project Info
PROJECT_NAME="Smart Shield Trust Route"
VERSION="2.0.0"

# Google Maps (Optional, falls back to OSRM if not provided)
GOOGLE_MAPS_API_KEY=""

# Database
# Use sqlite:///./smartshield.db for development
# Use postgresql+psycopg2://user:password@host:port/dbname for production
DATABASE_URL="sqlite:///./smartshield.db"

# Security
SECRET_KEY="your-super-secret-key-change-this"
JWT_SECRET_KEY="your-jwt-secret-key-change-this"
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Server Config
BACKEND_HOST="0.0.0.0"
BACKEND_PORT=8000
ENVIRONMENT="production"
DEBUG="False"
ALLOWED_ORIGINS="*"

# Optimization
# Options: nearest_neighbor, genetic, astar
OPTIMIZATION_ALGORITHM="astar"

# Email Configuration (Optional for SOS)
