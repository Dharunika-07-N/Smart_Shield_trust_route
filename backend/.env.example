# Project Info
PROJECT_NAME="Smart Shield Trust Route"
VERSION="2.0.0"

# Google Maps API (REQUIRED for traffic-aware routing)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# GraphHopper API (Alternative for routing and navigation)
GRAPHHOPPER_API_KEY=your_graphhopper_api_key_here

# Database
# Use sqlite:///./smartshield.db for development
# Use postgresql+psycopg2://user:password@host:port/dbname for production
DATABASE_URL="sqlite:///./smartshield.db"

# Security
SECRET_KEY="your-super-secret-key-change-this"
JWT_SECRET_KEY="your-jwt-secret-key-change-this"
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Server Config
BACKEND_HOST="0.0.0.0"
BACKEND_PORT=8000
ENVIRONMENT="production"
DEBUG="False"
ALLOWED_ORIGINS="*"

# Optimization
# Options: nearest_neighbor, genetic, astar
OPTIMIZATION_ALGORITHM="astar"

# Email Configuration (Optional for SOS)
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME=""
SMTP_PASSWORD=""
SMTP_USE_TLS=True
FROM_EMAIL=""
EMERGENCY_EMAIL=""
