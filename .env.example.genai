# Generative AI Configuration for Smart Shield
# Copy this to .env and fill in your values

# OpenAI Configuration (Required for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# AI Model Settings (Optional - defaults provided)
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Cost Control (Optional)
OPENAI_MAX_REQUESTS_PER_MINUTE=10
OPENAI_MAX_TOKENS_PER_DAY=10000

# Caching (Optional)
GENAI_CACHE_TTL_SECONDS=3600
GENAI_CACHE_MAX_SIZE=1000

# Fallback Behavior (Optional)
GENAI_FALLBACK_ENABLED=true
GENAI_LOG_AI_RESPONSES=true
